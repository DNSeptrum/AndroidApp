<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SeekBar
        android:id="@+id/brightnessSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/brightness_slider_description"
        android:max="255"
        android:padding="16dp"
        android:progress="127"
        app:layout_constraintBottom_toTopOf="@+id/darkModeSwitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pasek"
        app:layout_constraintVertical_bias="0.876" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="96dp"
        android:layout_height="51dp"
        android:layout_marginStart="289dp"
        android:layout_marginTop="663dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:text="Cofnij"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Switch
        android:id="@+id/darkModeSwitch"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="245dp"
        android:layout_marginBottom="233dp"
        android:checked="false"
        android:text="Tryb Ciemny"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brightnessSeekBar" />

    <TextView
        android:id="@+id/naglowek"
        android:layout_width="211dp"
        android:layout_height="74dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="20dp"
        android:text="Ustawieania"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/pasek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pasek"
        android:layout_width="253dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="10dp"
        android:text="zmiana jasność ekranu"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/brightnessSeekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/naglowek" />
</androidx.constraintlayout.widget.ConstraintLayout>